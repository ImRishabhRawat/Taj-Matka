<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
</head>
<body>
    <div class="wrapper d-flex">
        <!-- Sidebar -->
        <%- include('partials/sidebar') %>

        <!-- Page Content -->
        <div id="content">
            <!-- Top Navbar -->
            <%- include('partials/header') %>

            <div class="container-fluid p-4">
                <!-- Header -->
                <div class="row mb-4">
                    <div class="col-12 d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="fw-bold"><i class="fas fa-star text-warning me-2"></i>Winner History</h2>
                            <p class="text-secondary">View all winning bets and user winnings</p>
                        </div>

                    </div>
                </div>

                <!-- Stats Cards -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card border-0 shadow-sm rounded-4">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="stat-icon bg-success bg-opacity-10 text-success rounded-circle p-3 me-3">
                                        <i class="fas fa-trophy fa-lg"></i>
                                    </div>
                                    <div>
                                        <p class="text-muted mb-1">Total Winners</p>
                                        <h4 class="fw-bold mb-0"><%= stats.totalWinners %></h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-0 shadow-sm rounded-4">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="stat-icon bg-warning bg-opacity-10 text-warning rounded-circle p-3 me-3">
                                        <i class="fas fa-coins fa-lg"></i>
                                    </div>
                                    <div>
                                        <p class="text-muted mb-1">Total Winnings</p>
                                        <h4 class="fw-bold mb-0">₹<%= stats.totalWinnings.toLocaleString() %></h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-0 shadow-sm rounded-4">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="stat-icon bg-info bg-opacity-10 text-info rounded-circle p-3 me-3">
                                        <i class="fas fa-calendar-day fa-lg"></i>
                                    </div>
                                    <div>
                                        <p class="text-muted mb-1">Today's Winners</p>
                                        <h4 class="fw-bold mb-0"><%= stats.todayWinners %></h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-0 shadow-sm rounded-4">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="stat-icon bg-primary bg-opacity-10 text-primary rounded-circle p-3 me-3">
                                        <i class="fas fa-rupee-sign fa-lg"></i>
                                    </div>
                                    <div>
                                        <p class="text-muted mb-1">Today's Payout</p>
                                        <h4 class="fw-bold mb-0">₹<%= stats.todayPayout.toLocaleString() %></h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Filters -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card shadow-sm border-0 rounded-4">
                            <div class="card-body p-3">
                                <form method="GET" class="row g-3">
                                    <div class="col-md-3">
                                        <input type="text" class="form-control" name="search" placeholder="Search by phone/name" value="<%= filters.search %>">
                                    </div>
                                    <div class="col-md-2">
                                        <select class="form-select" name="gameId">
                                            <option value="">All Games</option>
                                            <% if (games && games.length > 0) { %>
                                                <% games.forEach(game => { %>
                                                    <option value="<%= game.id %>" <%= filters.gameId == game.id ? 'selected' : '' %>>
                                                        <%= game.name %>
                                                    </option>
                                                <% }); %>
                                            <% } %>
                                        </select>
                                    </div>
                                    <div class="col-md-2">
                                        <input type="date" class="form-control" name="startDate" value="<%= filters.startDate %>">
                                    </div>
                                    <div class="col-md-2">
                                        <input type="date" class="form-control" name="endDate" value="<%= filters.endDate %>">
                                    </div>
                                    <div class="col-md-3">
                                        <button type="submit" class="btn btn-primary w-100">
                                            <i class="fas fa-search me-2"></i>Filter
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Winners Table -->
                <div class="row">
                    <div class="col-12">
                        <div class="card shadow border-0 rounded-4">
                            <div class="card-header bg-white py-3 border-0">
                                <h5 class="m-0 fw-bold text-primary">Winning Bets</h5>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0 table-responsive-stack">
                                        <thead class="bg-light">
                                            <tr>
                                                <th class="px-4 py-3">Date & Time</th>
                                                <th class="px-4 py-3">User</th>
                                                <th class="px-4 py-3">Game</th>
                                                <th class="px-4 py-3">Bet Type</th>
                                                <th class="px-4 py-3">Bet Number</th>
                                                <th class="px-4 py-3">Bet Amount</th>
                                                <th class="px-4 py-3">Win Amount</th>
                                                <th class="px-4 py-3">Multiplier</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (winners && winners.length > 0) { %>
                                                <% winners.forEach(winner => { %>
                                                    <tr>
                                                        <td class="px-4 py-3" data-label="Date & Time">
                                                            <%= new Date(winner.created_at).toLocaleString('en-IN') %>
                                                        </td>
                                                        <td class="px-4 py-3" data-label="User">
                                                            <div class="d-flex align-items-center">
                                                                <img src="https://ui-avatars.com/api/?name=<%= winner.user_name %>&background=random" 
                                                                     class="rounded-circle me-2" width="32" height="32">
                                                                <div>
                                                                    <div class="fw-bold"><%= winner.user_name %></div>
                                                                    <small class="text-muted"><%= winner.user_phone %></small>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td class="px-4 py-3" data-label="Game"><%= winner.game_name %></td>
                                                        <td class="px-4 py-3" data-label="Bet Type">
                                                            <span class="badge bg-info"><%= winner.bet_type %></span>
                                                        </td>
                                                        <td class="px-4 py-3" data-label="Bet Number">
                                                            <span class="badge bg-primary fs-6"><%= winner.bet_number %></span>
                                                        </td>
                                                        <td class="px-4 py-3 text-primary fw-bold" data-label="Bet Amount">₹<%= winner.bet_amount.toLocaleString() %></td>
                                                        <td class="px-4 py-3 text-success fw-bold" data-label="Win Amount">₹<%= winner.payout_amount.toLocaleString() %></td>
                                                        <td class="px-4 py-3" data-label="Multiplier">
                                                            <span class="badge bg-warning text-dark">
                                                                <%= (winner.payout_amount / winner.bet_amount).toFixed(1) %>x
                                                            </span>
                                                        </td>
                                                    </tr>
                                                <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="8" class="text-center py-5 text-muted">
                                                        <i class="fas fa-trophy fa-3x mb-3 opacity-25"></i>
                                                        <p>No winners found</p>
                                                    </td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/scripts') %>


</body>
</html>
