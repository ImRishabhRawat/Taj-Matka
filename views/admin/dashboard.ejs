<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
</head>
<body>

    <div class="wrapper d-flex">
        <!-- Sidebar -->
        <%- include('partials/sidebar') %>

        <!-- Page Content -->
        <div id="content">
            <!-- Top Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-toggle-sidebar">
                        <i class="fas fa-align-left"></i>
                    </button>
                    
                    <div class="ms-auto d-flex align-items-center">
                        <div class="dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                <span class="me-2 d-none d-md-inline"><%= user.name || 'Admin' %></span>
                                <img src="https://ui-avatars.com/api/?name=Admin&background=4e73df&color=fff" alt="Admin" class="rounded-circle" width="35">
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-3">
                                <li><a class="dropdown-item" href="/profile"><i class="fas fa-user fa-sm fa-fw me-2 text-gray-400"></i> Profile</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <button type="button" onclick="handleLogout()" class="dropdown-item text-danger">
                                        <i class="fas fa-sign-out-alt fa-sm fa-fw me-2 text-gray-400"></i> Logout
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <div class="container-fluid p-4">
                <div class="row mb-4">
                    <div class="col-12">
                        <h2 class="fw-bold">Dashboard Overview</h2>
                        <p class="text-secondary">Welcome back, Admin!</p>
                    </div>
                </div>

                <!-- Stats Row -->
                <div class="row">
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card stat-card h-100">
                            <div class="card-body">
                                <div class="stat-icon bg-gradient-primary text-white">
                                    <i class="fas fa-users"></i>
                                </div>
                                <div class="stat-label">Total Users</div>
                                <div class="stat-value"><%= stats.userCount %></div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card stat-card h-100">
                            <div class="card-body">
                                <div class="stat-icon bg-gradient-success text-white">
                                    <i class="fas fa-gamepad"></i>
                                </div>
                                <div class="stat-label">Active Games</div>
                                <div class="stat-value"><%= stats.activeGamesCount %></div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card stat-card h-100">
                            <div class="card-body text-decoration-none" onclick="location.href='/admin/withdrawals'" style="cursor: pointer;">
                                <div class="stat-icon bg-gradient-warning text-white">
                                    <i class="fas fa-clock"></i>
                                </div>
                                <div class="stat-label">Pending Withdrawals</div>
                                <div class="stat-value"><%= stats.pendingWithdrawalsCount %></div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card stat-card h-100">
                            <div class="card-body">
                                <div class="stat-icon bg-gradient-info text-white">
                                    <i class="fas fa-wallet"></i>
                                </div>
                                <div class="stat-label">User Liabilities</div>
                                <div class="stat-value">â‚¹<%= parseFloat(stats.totalBalance).toLocaleString() %></div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Content Row -->
                <div class="row">
                    <div class="col-lg-8 mb-4">
                        <div class="card shadow border-0 rounded-4">
                            <div class="card-header bg-white py-3 border-0">
                                <h6 class="m-0 fw-bold text-primary">Quick Actions</h6>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <a href="/admin/result-entry" class="btn btn-primary w-100 p-3 rounded-3 d-flex flex-column align-items-center">
                                            <i class="fas fa-trophy mb-2 fa-2x"></i>
                                            Declare Results
                                        </a>
                                    </div>
                                    <div class="col-md-4">
                                        <a href="/admin/users" class="btn btn-success w-100 p-3 rounded-3 d-flex flex-column align-items-center">
                                            <i class="fas fa-user-plus mb-2 fa-2x"></i>
                                            Manage Users
                                        </a>
                                    </div>
                                    <div class="col-md-4">
                                        <a href="/admin/games" class="btn btn-info text-white w-100 p-3 rounded-3 d-flex flex-column align-items-center">
                                            <i class="fas fa-plus-circle mb-2 fa-2x"></i>
                                            Manage Games
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 mb-4">
                        <div class="card shadow border-0 rounded-4">
                            <div class="card-header bg-white py-3 border-0">
                                <h6 class="m-0 fw-bold text-primary">Notifications</h6>
                            </div>
                            <div class="card-body text-center py-5">
                                <i class="fas fa-bell fa-3x text-light mb-3"></i>
                                <p class="text-secondary">No new notifications</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/scripts') %>
</body>
</html>
