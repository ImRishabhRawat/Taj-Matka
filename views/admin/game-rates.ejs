<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
</head>
<body>

    <div class="wrapper d-flex">
        <!-- Sidebar -->
        <%- include('partials/sidebar') %>

        <!-- Page Content -->
        <div id="content">
            <!-- Top Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-toggle-sidebar">
                        <i class="fas fa-align-left"></i>
                    </button>
                    <div class="ms-auto d-flex align-items-center">
                        <span class="me-3 d-none d-md-inline"><%= user.name %></span>
                        <img src="https://ui-avatars.com/api/?name=Admin&background=4e73df&color=fff" alt="Admin" class="rounded-circle" width="35">
                    </div>
                </div>
            </nav>

            <div class="container-fluid p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h2 class="fw-bold">Game Rates</h2>
                        <p class="text-secondary">Set winning rates for Jodi and Haruf</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="card border-0 shadow-sm rounded-4">
                            <div class="card-body p-4">
                                <form id="ratesForm">
                                    <h5 class="fw-bold mb-4 text-primary"><i class="fas fa-percentage me-2"></i>Winning Ratios</h5>
                                    
                                    <div class="mb-4">
                                        <label class="form-label fw-600">Jodi Rate (Multiplies Bet Amount)</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0">1 :</span>
                                            <input type="number" class="form-control border-start-0 ps-0" id="rateJodi" name="rate_jodi" value="<%= rates.rate_jodi || 90 %>" required min="1" step="0.1">
                                        </div>
                                        <div class="form-text">If user bets 10, they win 10 x Rate.</div>
                                    </div>

                                    <div class="mb-4">
                                        <label class="form-label fw-600">Haruf Rate (Multiplies Bet Amount)</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0">1 :</span>
                                            <input type="number" class="form-control border-start-0 ps-0" id="rateHaruf" name="rate_haruf" value="<%= rates.rate_haruf || 9 %>" required min="1" step="0.1">
                                        </div>
                                        <div class="form-text">Applies to both Andar and Bahar Haruf.</div>
                                    </div>

                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary btn-lg rounded-3">
                                            <i class="fas fa-save me-2"></i> Update Rates
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/scripts') %>

    <script>
        const ratesForm = document.getElementById('ratesForm');
        
        ratesForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(ratesForm);
            const data = Object.fromEntries(formData.entries());
            
            try {
                await apiCall('/admin/game-rates', 'POST', data);
                Swal.fire({
                    icon: 'success',
                    title: 'Updated',
                    text: 'Game rates updated successfully',
                    timer: 1500
                }).then(() => location.reload());
            } catch (err) {}
        });
    </script>
</body>
</html>
