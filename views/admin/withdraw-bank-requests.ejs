<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
</head>
<body>
    <div class="wrapper d-flex">
        <!-- Sidebar -->
        <%- include('partials/sidebar') %>

        <!-- Page Content -->
        <div id="content">
            <!-- Top Navbar -->
            <%- include('partials/header') %>

            <div class="container-fluid p-4">
                <!-- Header -->
                <div class="row mb-4">
                    <div class="col-12">
                        <h2 class="fw-bold"><i class="fas fa-university text-primary me-2"></i>Bank Withdrawal Requests</h2>
                        <p class="text-secondary">Manage bank transfer withdrawal requests</p>
                    </div>
                </div>

                <!-- Stats Cards -->
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm rounded-4">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="stat-icon bg-warning bg-opacity-10 text-warning rounded-circle p-3 me-3">
                                        <i class="fas fa-clock fa-lg"></i>
                                    </div>
                                    <div>
                                        <p class="text-muted mb-1">Pending Requests</p>
                                        <h4 class="fw-bold mb-0"><%= stats.pending %></h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm rounded-4">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="stat-icon bg-success bg-opacity-10 text-success rounded-circle p-3 me-3">
                                        <i class="fas fa-check fa-lg"></i>
                                    </div>
                                    <div>
                                        <p class="text-muted mb-1">Processed Today</p>
                                        <h4 class="fw-bold mb-0"><%= stats.processedToday %></h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm rounded-4">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="stat-icon bg-info bg-opacity-10 text-info rounded-circle p-3 me-3">
                                        <i class="fas fa-rupee-sign fa-lg"></i>
                                    </div>
                                    <div>
                                        <p class="text-muted mb-1">Pending Amount</p>
                                        <h4 class="fw-bold mb-0">₹<%= stats.pendingAmount.toLocaleString() %></h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Bank Withdrawal Requests Table -->
                <div class="row">
                    <div class="col-12">
                        <div class="card shadow border-0 rounded-4">
                            <div class="card-header bg-white py-3 border-0">
                                <h5 class="m-0 fw-bold text-primary">Bank Transfer Requests</h5>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0 table-responsive-stack">
                                        <thead class="bg-light">
                                            <tr>
                                                <th class="px-4 py-3">Date & Time</th>
                                                <th class="px-4 py-3">User</th>
                                                <th class="px-4 py-3">Amount</th>
                                                <th class="px-4 py-3">Bank Details</th>
                                                <th class="px-4 py-3">Status</th>
                                                <th class="px-4 py-3">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (requests && requests.length > 0) { %>
                                                <% requests.forEach(request => { %>
                                                    <tr>
                                                        <td class="px-4 py-3" data-label="Date & Time">
                                                            <%= new Date(request.created_at).toLocaleString('en-IN') %>
                                                        </td>
                                                        <td class="px-4 py-3" data-label="User">
                                                            <div class="fw-bold"><%= request.user_name %></div>
                                                            <small class="text-muted"><%= request.user_phone %></small>
                                                        </td>
                                                        <td class="px-4 py-3 fw-bold text-danger" data-label="Amount">₹<%= request.amount.toLocaleString() %></td>
                                                        <td class="px-4 py-3" data-label="Bank Details">
                                                            <% if (request.bank_details) { %>
                                                                <div class="small">
                                                                    <div><strong>A/C:</strong> <%= request.bank_details.account_number %></div>
                                                                    <div><strong>IFSC:</strong> <%= request.bank_details.ifsc_code %></div>
                                                                    <div><strong>Bank:</strong> <%= request.bank_details.bank_name %></div>
                                                                    <div><strong>Holder:</strong> <%= request.bank_details.account_holder %></div>
                                                                </div>
                                                            <% } else { %>
                                                                <span class="text-muted">No details</span>
                                                            <% } %>
                                                        </td>
                                                        <td class="px-4 py-3" data-label="Status">
                                                            <% if (request.status === 'pending') { %>
                                                                <span class="badge bg-warning">Pending</span>
                                                            <% } else if (request.status === 'approved') { %>
                                                                <span class="badge bg-success">Approved</span>
                                                            <% } else { %>
                                                                <span class="badge bg-danger">Rejected</span>
                                                            <% } %>
                                                        </td>
                                                        <td class="px-4 py-3" data-label="Actions">
                                                            <% if (request.status === 'pending') { %>
                                                                <button class="btn btn-sm btn-success mb-1" onclick="approveRequest(<%= request.id %>)">
                                                                    <i class="fas fa-check"></i> Approve
                                                                </button>
                                                                <button class="btn btn-sm btn-danger" onclick="rejectRequest(<%= request.id %>)">
                                                                    <i class="fas fa-times"></i> Reject
                                                                </button>
                                                            <% } else { %>
                                                                <span class="text-muted">-</span>
                                                            <% } %>
                                                        </td>
                                                    </tr>
                                                <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="6" class="text-center py-5 text-muted">
                                                        <i class="fas fa-inbox fa-3x mb-3 opacity-25"></i>
                                                        <p>No bank withdrawal requests found</p>
                                                    </td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/scripts') %>

    <script>
        async function approveRequest(id) {
            const confirm = await Swal.fire({
                title: 'Approve Bank Withdrawal?',
                text: "Make sure you have transferred the amount to user's bank account",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, approve it!'
            });

            if (confirm.isConfirmed) {
                try {
                    const response = await fetch(`/admin/api/withdrawals/${id}/approve`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' }
                    });

                    const result = await response.json();

                    if (result.success) {
                        Swal.fire('Approved!', 'Bank withdrawal request has been approved.', 'success')
                            .then(() => location.reload());
                    } else {
                        throw new Error(result.message);
                    }
                } catch (error) {
                    Swal.fire('Error', error.message || 'Failed to approve request', 'error');
                }
            }
        }

        async function rejectRequest(id) {
            const confirm = await Swal.fire({
                title: 'Reject Bank Withdrawal?',
                text: "This will reject the withdrawal request and refund the amount",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, reject it!'
            });

            if (confirm.isConfirmed) {
                try {
                    const response = await fetch(`/admin/api/withdrawals/${id}/reject`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' }
                    });

                    const result = await response.json();

                    if (result.success) {
                        Swal.fire('Rejected!', 'Bank withdrawal request has been rejected.', 'success')
                            .then(() => location.reload());
                    } else {
                        throw new Error(result.message);
                    }
                } catch (error) {
                    Swal.fire('Error', error.message || 'Failed to reject request', 'error');
                }
            }
        }
    </script>
</body>
</html>
