<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <style>
        .game-card {
            transition: all 0.3s ease;
            border-radius: 15px;
            overflow: hidden;
            border: none;
            box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        }
        .game-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        }
        .status-badge {
            font-size: 0.75rem;
            padding: 5px 12px;
            border-radius: 20px;
        }
        .declare-btn {
            border-radius: 10px;
            font-weight: 600;
            padding: 8px 15px;
        }
        .winning-num-input {
            font-size: 1.5rem;
            text-align: center;
            font-weight: bold;
            letter-spacing: 5px;
            border-radius: 10px;
        }
    </style>
</head>
<body>

    <div class="wrapper d-flex">
        <!-- Sidebar -->
        <%- include('partials/sidebar') %>

        <!-- Page Content -->
        <div id="content">
            <!-- Top Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm mb-4">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-toggle-sidebar">
                        <i class="fas fa-align-left"></i>
                    </button>
                    <h4 class="ms-3 mb-0 fw-bold">Declare Results</h4>
                    
                    <div class="ms-auto d-flex align-items-center">
                        <div class="dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                <span class="me-2 d-none d-md-inline"><%= user.name || 'Admin' %></span>
                                <img src="https://ui-avatars.com/api/?name=Admin&background=4e73df&color=fff" alt="Admin" class="rounded-circle" width="35">
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-3">
                                <li><button type="button" onclick="handleLogout()" class="dropdown-item text-danger"><i class="fas fa-sign-out-alt fa-sm fa-fw me-2"></i> Logout</button></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <div class="container-fluid px-4">
                <div class="row mb-4">
                    <div class="col-md-8">
                        <h5 class="fw-bold text-dark">Today's Games (<%= today %>)</h5>
                        <p class="text-secondary small">Enter winning numbers and process payouts for today's sessions.</p>
                    </div>
                </div>

                <div class="row g-4">
                    <% games.forEach(game => { %>
                        <div class="col-xl-4 col-md-6">
                            <div class="card game-card h-100">
                                <div class="card-body p-4">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <div>
                                            <h5 class="fw-bold mb-1"><%= game.name %></h5>
                                            <div class="small text-muted">
                                                <i class="far fa-clock me-1"></i> <%= game.open_time %> - <%= game.close_time %>
                                            </div>
                                        </div>
                                        <span class="status-badge <%= game.session_status === 'completed' ? 'bg-success text-white' : 'bg-warning text-dark' %>">
                                            <%= game.session_status ? game.session_status.toUpperCase() : 'PENDING' %>
                                        </span>
                                    </div>

                                    <hr class="my-3 opacity-25">

                                    <% if (game.session_status === 'completed') { %>
                                        <div class="text-center py-2">
                                            <div class="small text-muted mb-1">Declared Winning Number</div>
                                            <div class="display-6 fw-bold text-primary"><%= game.winning_number %></div>
                                            <div class="small text-muted mt-2">
                                                <i class="fas fa-check-circle text-success me-1"></i> Payouts Processed
                                            </div>
                                        </div>
                                    <% } else { %>
                                        <div class="mb-3">
                                            <label class="form-label small fw-bold">Enter Winning Number (00-99)</label>
                                            <input type="text" id="win-<%= game.session_id %>" class="form-control winning-num-input" maxlength="2" placeholder="--">
                                        </div>
                                        <div class="d-grid gap-2">
                                            <button class="btn btn-primary declare-btn" onclick="declareResult('<%= game.session_id %>', '<%= game.name %>')">
                                                <i class="fas fa-check-circle me-1"></i> Declare Result
                                            </button>
                                            <button class="btn btn-outline-warning declare-btn btn-sm" onclick="scheduleResult('<%= game.session_id %>', '<%= game.name %>')">
                                                <i class="fas fa-clock me-1"></i> Schedule Result
                                            </button>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <%- include('partials/scripts') %>

    <script>
        async function declareResult(sessionId, gameName) {
            const winningNumber = document.getElementById(`win-${sessionId}`).value;
            
            if (!winningNumber || winningNumber.length !== 2) {
                alert('Please enter a valid 2-digit winning number');
                return;
            }

            if (!confirm(`Are you sure you want to declare ${winningNumber} as the winning number for ${gameName}? This action is irreversible and will process all payouts!`)) {
                return;
            }

            try {
                const response = await fetch('/admin/api/results/declare', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ sessionId, winningNumber })
                });

                const result = await response.json();
                if (result.success) {
                    alert(result.message || 'Result declared successfully!');
                    window.location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while declaring result');
            }
        }

        async function scheduleResult(sessionId, gameName) {
            const winningNumber = document.getElementById(`win-${sessionId}`).value;
            
            if (!winningNumber || winningNumber.length !== 2) {
                alert('Please enter a valid 2-digit winning number');
                return;
            }

            if (!confirm(`Schedule ${winningNumber} for ${gameName}? It will be automatically declared at the game's close time.`)) {
                return;
            }

            try {
                const response = await fetch('/admin/api/results/schedule', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ sessionId, winningNumber })
                });

                const result = await response.json();
                if (result.success) {
                    alert(result.message || 'Result scheduled successfully!');
                    window.location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while scheduling result');
            }
        }
    </script>
</body>
</html>
