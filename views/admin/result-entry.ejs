<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
</head>
<body>

    <div class="wrapper d-flex">
        <!-- Sidebar -->
        <%- include('partials/sidebar') %>

        <!-- Page Content -->
        <div id="content">
            <!-- Top Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-toggle-sidebar">
                        <i class="fas fa-align-left"></i>
                    </button>
                    <div class="ms-auto d-flex align-items-center">
                        <span class="me-3 d-none d-md-inline"><%= user.name %></span>
                        <img src="https://ui-avatars.com/api/?name=Admin&background=4e73df&color=fff" alt="Admin" class="rounded-circle" width="35">
                    </div>
                </div>
            </nav>

            <div class="container-fluid p-4">
                <div class="row mb-4">
                    <div class="col-12 text-center">
                        <h2 class="fw-bold">Declare Result</h2>
                        <p class="text-secondary">Select a game and enter the winning number</p>
                    </div>
                </div>

                <div class="row justify-content-center">
                    <div class="col-xl-6 col-lg-8">
                        <div class="card shadow border-0 rounded-4">
                            <div class="card-body p-4 p-md-5">
                                <form id="resultForm">
                                    <div class="mb-4 text-center">
                                        <label class="form-label d-block fw-bold text-uppercase letter-spacing-1">Current Date</label>
                                        <h4 class="text-primary fw-bold"><%= new Date().toDateString() %></h4>
                                        <input type="hidden" name="date" value="<%= today %>">
                                    </div>

                                    <div class="mb-4">
                                        <label class="form-label fw-600">Select Game</label>
                                        <select class="form-select form-select-lg rounded-3 border-2" name="gameSessionId" id="gameSessionId" required>
                                            <option value="" disabled selected>Choose a game...</option>
                                            <% games.forEach(game => { %>
                                                <% if (game.session_status !== 'completed') { %>
                                                    <option value="<%= game.session_id %>">
                                                        <%= game.name %> (<%= game.open_time %> - <%= game.close_time %>)
                                                    </option>
                                                <% } %>
                                            <% }); %>
                                        </select>
                                    </div>

                                    <div class="mb-4">
                                        <label class="form-label fw-600">Winning Number (00-99)</label>
                                        <input type="text" 
                                               name="winningNumber" 
                                               id="winningNumber" 
                                               class="form-control form-control-lg rounded-3 border-2 text-center fw-bold fs-2" 
                                               maxlength="2" 
                                               pattern="\d{2}" 
                                               placeholder="00"
                                               required>
                                        <div class="form-text text-center">Enter a 2-digit number (e.g., 05, 42, 99)</div>
                                    </div>

                                    <div class="alert alert-warning rounded-3 border-0 small mb-4">
                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                        <strong>CRITICAL:</strong> Declaring a result will automatically process all bets and credit winners. This action cannot be undone.
                                    </div>

                                    <button type="submit" class="btn btn-primary btn-lg w-100 rounded-3 py-3 fw-bold">
                                        <i class="fas fa-check-circle me-2"></i> DECLARE RESULT
                                    </button>
                                </form>
                            </div>
                        </div>

                        <!-- Today's Declared Results -->
                        <div class="card mt-5 shadow border-0 rounded-4">
                            <div class="card-header bg-white py-3 border-0">
                                <h6 class="m-0 fw-bold text-primary">Declared Today</h6>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead>
                                            <tr>
                                                <th>Game</th>
                                                <th class="text-center">Winning No.</th>
                                                <th>Time Declared</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% let declaredCount = 0; %>
                                            <% games.forEach(game => { %>
                                                <% if (game.session_status === 'completed') { %>
                                                    <% declaredCount++; %>
                                                    <tr>
                                                        <td class="fw-600"><%= game.name %></td>
                                                        <td class="text-center">
                                                            <span class="badge bg-primary fs-6 px-3"><%= game.winning_number %></span>
                                                        </td>
                                                        <td class="text-secondary small">
                                                            <%= new Date(game.result_declared_at).toLocaleTimeString() %>
                                                        </td>
                                                    </tr>
                                                <% } %>
                                            <% }); %>
                                            <% if (declaredCount === 0) { %>
                                                <tr>
                                                    <td colspan="3" class="text-center py-4 text-secondary">No results declared yet today</td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/scripts') %>

    <script>
        const resultForm = document.getElementById('resultForm');
        
        resultForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const formData = new FormData(resultForm);
            const data = Object.fromEntries(formData.entries());
            
            // Validate winning number
            if (!/^\d{2}$/.test(data.winningNumber)) {
                return Swal.fire('Error', 'Please enter a valid 2-digit number (00-99)', 'error');
            }

            // Confirm Action
            const confirmed = await Swal.fire({
                title: 'Are you sure?',
                text: `You are declaring \"${data.winningNumber}\" as the winner. This will process all payouts immediately!`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#4e73df',
                cancelButtonColor: '#858796',
                confirmButtonText: 'Yes, Declare Result!'
            });

            if (!confirmed.isConfirmed) return;

            try {
                const response = await apiCall('/api/results', 'POST', data);
                
                await Swal.fire({
                    icon: 'success',
                    title: 'Result Declared!',
                    html: `
                        <div class="text-start">
                            <p><b>Total Bets:</b> ${response.data.totalBets}</p>
                            <p><b>Winners:</b> ${response.data.winCount}</p>
                            <p><b>Total Payout:</b> â‚¹${response.data.totalPayout.toLocaleString()}</p>
                        </div>
                    `,
                    timer: 5000
                });
                
                location.reload();
            } catch (err) {
                // apiCall already shows error message
            }
        });
    </script>
</body>
</html>
