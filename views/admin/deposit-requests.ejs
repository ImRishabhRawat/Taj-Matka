<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
</head>
<body>
    <div class="wrapper d-flex">
        <!-- Sidebar -->
        <%- include('partials/sidebar') %>

        <!-- Page Content -->
        <div id="content">
            <!-- Top Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-toggle-sidebar">
                        <i class="fas fa-align-left"></i>
                    </button>
                    
                    <div class="ms-auto d-flex align-items-center">
                        <div class="dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                <span class="me-2 d-none d-md-inline"><%= user.name || 'Admin' %></span>
                                <img src="https://ui-avatars.com/api/?name=Admin&background=4e73df&color=fff" alt="Admin" class="rounded-circle" width="35">
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-3">
                                <li><a class="dropdown-item" href="/profile"><i class="fas fa-user fa-sm fa-fw me-2 text-gray-400"></i> Profile</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <button type="button" onclick="handleLogout()" class="dropdown-item text-danger">
                                        <i class="fas fa-sign-out-alt fa-sm fa-fw me-2 text-gray-400"></i> Logout
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <div class="container-fluid p-4">
                <!-- Header -->
                <div class="row mb-4">
                    <div class="col-12 d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="fw-bold"><i class="fas fa-arrow-down text-success me-2"></i>Deposit History</h2>
                            <p class="text-secondary">View all user deposit transactions</p>
                        </div>
                        <div>
                            <button class="btn btn-outline-primary" onclick="exportData()">
                                <i class="fas fa-download me-2"></i>Export
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Filters -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card shadow-sm border-0 rounded-4">
                            <div class="card-body p-3">
                                <form method="GET" class="row g-3">
                                    <div class="col-md-3">
                                        <input type="text" class="form-control" name="search" placeholder="Search by phone/name" value="<%= filters.search %>">
                                    </div>
                                    <div class="col-md-2">
                                        <select class="form-select" name="paymentMethod">
                                            <option value="">All Methods</option>
                                            <option value="upi" <%= filters.paymentMethod === 'upi' ? 'selected' : '' %>>UPI</option>
                                            <option value="bank" <%= filters.paymentMethod === 'bank' ? 'selected' : '' %>>Bank Transfer</option>
                                        </select>
                                    </div>
                                    <div class="col-md-2">
                                        <input type="date" class="form-control" name="startDate" value="<%= filters.startDate %>">
                                    </div>
                                    <div class="col-md-2">
                                        <input type="date" class="form-control" name="endDate" value="<%= filters.endDate %>">
                                    </div>
                                    <div class="col-md-3">
                                        <button type="submit" class="btn btn-primary w-100">
                                            <i class="fas fa-search me-2"></i>Filter
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Stats Cards -->
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm rounded-4">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="stat-icon bg-success bg-opacity-10 text-success rounded-circle p-3 me-3">
                                        <i class="fas fa-rupee-sign fa-lg"></i>
                                    </div>
                                    <div>
                                        <p class="text-muted mb-1">Total Deposits (UPI)</p>
                                        <h4 class="fw-bold mb-0">₹<%= stats.totalUPI.toLocaleString() %></h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm rounded-4">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="stat-icon bg-primary bg-opacity-10 text-primary rounded-circle p-3 me-3">
                                        <i class="fas fa-university fa-lg"></i>
                                    </div>
                                    <div>
                                        <p class="text-muted mb-1">Total Deposits (Bank)</p>
                                        <h4 class="fw-bold mb-0">₹<%= stats.totalBank.toLocaleString() %></h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm rounded-4">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="stat-icon bg-info bg-opacity-10 text-info rounded-circle p-3 me-3">
                                        <i class="fas fa-chart-line fa-lg"></i>
                                    </div>
                                    <div>
                                        <p class="text-muted mb-1">Total Deposits</p>
                                        <h4 class="fw-bold mb-0">₹<%= (stats.totalUPI + stats.totalBank).toLocaleString() %></h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Deposits Table -->
                <div class="row">
                    <div class="col-12">
                        <div class="card shadow border-0 rounded-4">
                            <div class="card-header bg-white py-3 border-0">
                                <h5 class="m-0 fw-bold text-primary">Deposit Transactions</h5>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0 table-responsive-stack">
                                        <thead class="bg-light">
                                            <tr>
                                                <th class="px-4 py-3">Date & Time</th>
                                                <th class="px-4 py-3">User</th>
                                                <th class="px-4 py-3">Amount</th>
                                                <th class="px-4 py-3">Method</th>
                                                <th class="px-4 py-3">Transaction ID</th>
                                                <th class="px-4 py-3">Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (deposits && deposits.length > 0) { %>
                                                <% deposits.forEach(deposit => { %>
                                                    <tr>
                                                        <td class="px-4 py-3" data-label="Date & Time">
                                                            <%= new Date(deposit.created_at).toLocaleString('en-IN') %>
                                                        </td>
                                                        <td class="px-4 py-3" data-label="User">
                                                            <div class="fw-bold"><%= deposit.user_name %></div>
                                                            <small class="text-muted"><%= deposit.user_phone %></small>
                                                        </td>
                                                        <td class="px-4 py-3 fw-bold text-success" data-label="Amount">₹<%= deposit.amount.toLocaleString() %></td>
                                                        <td class="px-4 py-3" data-label="Method">
                                                            <% if (deposit.payment_method === 'upi') { %>
                                                                <span class="badge bg-success">UPI</span>
                                                            <% } else { %>
                                                                <span class="badge bg-primary">Bank Transfer</span>
                                                            <% } %>
                                                        </td>
                                                        <td class="px-4 py-3" data-label="Transaction ID">
                                                            <code><%= deposit.transaction_id || 'N/A' %></code>
                                                        </td>
                                                        <td class="px-4 py-3" data-label="Status">
                                                            <span class="badge bg-success">Completed</span>
                                                        </td>
                                                    </tr>
                                                <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="6" class="text-center py-5 text-muted">
                                                        <i class="fas fa-inbox fa-3x mb-3 opacity-25"></i>
                                                        <p>No deposit transactions found</p>
                                                    </td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/scripts') %>

    <script>
        function exportData() {
            Swal.fire({
                title: 'Export Data',
                text: 'This feature will be implemented soon',
                icon: 'info'
            });
        }
    </script>
</body>
</html>
