<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
</head>
<body>

    <div class="wrapper d-flex">
        <!-- Sidebar -->
        <%- include('partials/sidebar') %>

        <!-- Page Content -->
        <div id="content">
            <!-- Top Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-toggle-sidebar">
                        <i class="fas fa-align-left"></i>
                    </button>
                    <div class="ms-auto d-flex align-items-center">
                        <span class="me-3 d-none d-md-inline"><%= user.name %></span>
                        <img src="https://ui-avatars.com/api/?name=Admin&background=4e73df&color=fff" alt="Admin" class="rounded-circle" width="35">
                    </div>
                </div>
            </nav>

            <div class="container-fluid p-4">
                <!-- Back Button -->
                <div class="mb-4">
                    <a href="/admin/users" class="text-decoration-none text-secondary">
                        <i class="fas fa-arrow-left me-2"></i> Back to Users
                    </a>
                </div>

                <!-- User Profile Header -->
                <div class="row align-items-center mb-4">
                    <div class="col-md-6 mb-3 mb-md-0">
                        <div class="d-flex align-items-center">
                            <img src="https://ui-avatars.com/api/?name=<%= userDetails.name || userDetails.phone %>&background=random" class="rounded-circle me-4 shadow-sm" width="80" height="80">
                            <div>
                                <h2 class="fw-bold mb-1"><%= userDetails.name || 'User' %></h2>
                                <div class="text-secondary"><%= userDetails.phone %></div>
                                <div class="mt-2">
                                    <% if (userDetails.is_active) { %>
                                        <span class="badge bg-success-subtle text-success border border-success-subtle px-3 py-2 rounded-pill">Active</span>
                                    <% } else { %>
                                        <span class="badge bg-danger-subtle text-danger border border-danger-subtle px-3 py-2 rounded-pill">Blocked</span>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mt-3 mt-md-0">
                        <div class="d-flex flex-wrap gap-2 justify-content-md-end">
                            <button class="btn btn-primary rounded-pill px-4 adjust-balance" data-id="<%= userDetails.id %>" data-phone="<%= userDetails.phone %>" data-type="add">
                                <i class="fas fa-plus-circle me-2"></i> Add Fund
                            </button>
                            <button class="btn btn-outline-danger rounded-pill px-4 adjust-balance" data-id="<%= userDetails.id %>" data-phone="<%= userDetails.phone %>" data-type="sub">
                                <i class="fas fa-minus-circle me-2"></i> Deduct Fund
                            </button>
                            <button class="btn btn-<%= userDetails.is_active ? 'warning' : 'success' %> rounded-pill px-4 toggle-user-status" 
                                    data-id="<%= userDetails.id %>" data-status="<%= userDetails.is_active %>">
                                <i class="fas fa-<%= userDetails.is_active ? 'ban' : 'check' %> me-2"></i> <%= userDetails.is_active ? 'Block' : 'Unblock' %>
                            </button>
                            <button class="btn btn-danger rounded-pill px-4 delete-user" data-id="<%= userDetails.id %>">
                                <i class="fas fa-trash me-2"></i> Delete
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Stats Cards -->
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body p-4">
                                <div class="text-secondary small fw-bold mb-2">WALLET BALANCE</div>
                                <div class="h3 fw-bold mb-0">₹<%= parseFloat(userDetails.balance).toLocaleString() %></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body p-4">
                                <div class="text-secondary small fw-bold mb-2">WINNING BALANCE</div>
                                <div class="h3 fw-bold text-success mb-0">₹<%= parseFloat(userDetails.winning_balance).toLocaleString() %></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body p-4">
                                <div class="text-secondary small fw-bold mb-2">BANK DETAILS</div>
                                <% if (bankDetails) { %>
                                    <div class="fw-bold"><%= bankDetails.bank_name || 'N/A' %></div>
                                    <div class="small text-secondary">A/C: <%= bankDetails.account_number || 'N/A' %></div>
                                    <div class="small text-secondary">IFSC: <%= bankDetails.ifsc_code || 'N/A' %></div>
                                <% } else { %>
                                    <div class="text-secondary">No bank details available</div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- History Tabs -->
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0 pt-4 px-4">
                        <ul class="nav nav-pills card-header-pills" role="tablist">
                            <li class="nav-item me-2">
                                <a class="nav-link active" data-bs-toggle="pill" href="#bidding-history">Bidding History</a>
                            </li>
                            <li class="nav-item me-2">
                                <a class="nav-link" data-bs-toggle="pill" href="#winning-history">Winning History</a>
                            </li>
                            <li class="nav-item me-2">
                                <a class="nav-link" data-bs-toggle="pill" href="#withdrawal-history">Withdrawal History</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="pill" href="#wallet-history">Wallet History</a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body p-4">
                        <div class="tab-content">
                            <!-- Bidding History -->
                            <div class="tab-pane fade show active" id="bidding-history">
                                <div class="table-responsive">
                                    <table class="table table-hover table-responsive-stack">
                                        <thead>
                                            <tr>
                                                <th>Date</th>
                                                <th>Game</th>
                                                <th>Type</th>
                                                <th>Bet</th>
                                                <th>Amount</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (history.bids.length > 0) { %>
                                                <% history.bids.forEach(bid => { %>
                                                    <tr>
                                                        <td data-label="Date"><%= new Date(bid.created_at).toLocaleString() %></td>
                                                        <td data-label="Game"><%= bid.game_name %></td>
                                                        <td data-label="Type"><%= bid.bet_type %></td>
                                                        <td data-label="Bet"><span class="badge bg-light text-dark border px-2"><%= bid.bet_number %></span></td>
                                                        <td class="fw-bold" data-label="Amount">₹<%= bid.bet_amount %></td>
                                                        <td data-label="Status">
                                                            <% if(bid.status === 'win') { %>
                                                                <span class="badge bg-success-subtle text-success">Win</span>
                                                            <% } else if(bid.status === 'loss') { %>
                                                                <span class="badge bg-danger-subtle text-danger">Loss</span>
                                                            <% } else { %>
                                                                <span class="badge bg-warning-subtle text-warning text-dark">Pending</span>
                                                            <% } %>
                                                        </td>
                                                    </tr>
                                                <% }) %>
                                            <% } else { %>
                                                <tr><td colspan="6" class="text-center text-secondary py-3">No bidding history</td></tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            
                            <!-- Winning History -->
                            <div class="tab-pane fade" id="winning-history">
                                <div class="table-responsive">
                                    <table class="table table-hover table-responsive-stack">
                                        <thead>
                                            <tr>
                                                <th>Date</th>
                                                <th>Game</th>
                                                <th>Bet Type</th>
                                                <th>Number</th>
                                                <th>Winning Amount</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (history.wins.length > 0) { %>
                                                <% history.wins.forEach(win => { %>
                                                    <tr>
                                                        <td data-label="Date"><%= new Date(win.created_at).toLocaleString() %></td>
                                                        <td data-label="Game"><%= win.game_name %></td>
                                                        <td data-label="Bet Type"><%= win.bet_type %></td>
                                                        <td data-label="Number"><span class="badge bg-success text-white px-2"><%= win.bet_number %></span></td>
                                                        <td class="fw-bold text-success" data-label="Winning Amount">₹<%= win.payout_amount %></td>
                                                    </tr>
                                                <% }) %>
                                            <% } else { %>
                                                <tr><td colspan="5" class="text-center text-secondary py-3">No winning history</td></tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            
                            <!-- Withdrawal History -->
                            <div class="tab-pane fade" id="withdrawal-history">
                                <div class="table-responsive">
                                    <table class="table table-hover table-responsive-stack">
                                        <thead>
                                            <tr>
                                                <th>Date</th>
                                                <th>Amount</th>
                                                <th>Status</th>
                                                <th>Processed At</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (history.withdrawals.length > 0) { %>
                                                <% history.withdrawals.forEach(w => { %>
                                                    <tr>
                                                        <td data-label="Date"><%= new Date(w.created_at).toLocaleString() %></td>
                                                        <td class="fw-bold" data-label="Amount">₹<%= w.amount %></td>
                                                        <td data-label="Status">
                                                            <% if(w.status === 'approved') { %>
                                                                <span class="badge bg-success-subtle text-success">Approved</span>
                                                            <% } else if(w.status === 'rejected') { %>
                                                                <span class="badge bg-danger-subtle text-danger">Rejected</span>
                                                            <% } else { %>
                                                                <span class="badge bg-warning-subtle text-warning text-dark">Pending</span>
                                                            <% } %>
                                                        </td>
                                                        <td data-label="Processed At"><%= w.processed_at ? new Date(w.processed_at).toLocaleString() : '-' %></td>
                                                    </tr>
                                                <% }) %>
                                            <% } else { %>
                                                <tr><td colspan="4" class="text-center text-secondary py-3">No withdrawal history</td></tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            
                            <!-- Wallet History -->
                            <div class="tab-pane fade" id="wallet-history">
                                <div class="table-responsive">
                                    <table class="table table-hover table-responsive-stack">
                                        <thead>
                                            <tr>
                                                <th>Date</th>
                                                <th>Type</th>
                                                <th>Amount</th>
                                                <th>Balance After</th>
                                                <th>Description</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (history.transactions.length > 0) { %>
                                                <% history.transactions.forEach(t => { %>
                                                    <tr>
                                                        <td data-label="Date"><%= new Date(t.created_at).toLocaleString() %></td>
                                                        <td data-label="Type">
                                                            <span class="badge bg-secondary-subtle text-secondary text-uppercase"><%= t.transaction_type %></span>
                                                        </td>
                                                        <td class="fw-bold <%= ['deposit','win','refund'].includes(t.transaction_type) ? 'text-success' : 'text-danger' %>" data-label="Amount">
                                                            <%= ['deposit','win','refund'].includes(t.transaction_type) ? '+' : '-' %>₹<%= t.amount %>
                                                        </td>
                                                        <td data-label="Balance After">₹<%= t.balance_after %></td>
                                                        <td class="small text-secondary" data-label="Description"><%= t.description %></td>
                                                    </tr>
                                                <% }) %>
                                            <% } else { %>
                                                <tr><td colspan="5" class="text-center text-secondary py-3">No wallet history</td></tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Balance Adjustment Modal -->
    <div class="modal fade" id="balanceModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 rounded-4 shadow">
                <div class="modal-header border-0 pb-0">
                    <h5 class="modal-title fw-bold" id="modalTitle">Adjust Wallet Balance</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="balanceForm">
                    <div class="modal-body p-4">
                        <input type="hidden" id="userId" name="userId">
                        <input type="hidden" id="adjustmentType" name="adjustmentType">
                        
                        <div class="mb-3 bg-light p-3 rounded-3">
                            <div class="small text-secondary">User:</div>
                            <div class="fw-bold" id="userDisplayName"></div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-600">Amount (₹)</label>
                            <input type="number" class="form-control rounded-3" id="adjustAmount" name="amount" required min="1" placeholder="Enter amount">
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-600">Description / Note</label>
                            <textarea class="form-control rounded-3" id="adjustNote" name="description" rows="2" placeholder="Reason for adjustment..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer border-0 pt-0 pb-4 px-4">
                        <button type="button" class="btn btn-light rounded-3 px-4" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary rounded-3 px-4">Process</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include('partials/scripts') %>

    <script>
        const balanceModal = new bootstrap.Modal(document.getElementById('balanceModal'));
        const balanceForm = document.getElementById('balanceForm');
        
        // Open Balance Modal
        document.querySelectorAll('.adjust-balance').forEach(btn => {
            btn.addEventListener('click', () => {
                const id = btn.dataset.id;
                const phone = btn.dataset.phone;
                const type = btn.dataset.type;
                
                document.getElementById('userId').value = id;
                document.getElementById('userDisplayName').textContent = phone;
                document.getElementById('adjustmentType').value = type;
                
                const title = type === 'add' ? 'Add Funds' : 'Deduct Funds';
                document.getElementById('modalTitle').textContent = title;
                
                balanceForm.reset();
                // Re-set hidden values after reset
                document.getElementById('userId').value = id;
                document.getElementById('adjustmentType').value = type;
                
                balanceModal.show();
            });
        });

        // Handle Balance Adjustment
        balanceForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(balanceForm);
            const data = Object.fromEntries(formData.entries());
            
            const isAdd = data.adjustmentType === 'add';
            const finalAmount = isAdd ? parseFloat(data.amount) : -parseFloat(data.amount);
            
            try {
                await apiCall('/api/wallet/deposit', 'POST', {
                    userId: data.userId,
                    amount: finalAmount,
                    description: data.description || (isAdd ? 'Admin added funds' : 'Admin deducted funds')
                });
                
                Swal.fire('Success', 'Balance updated successfully', 'success').then(() => location.reload());
            } catch (err) {}
        });

        // Toggle User Status
        document.querySelector('.toggle-user-status').addEventListener('click', async function() {
            const btn = this;
            const id = btn.dataset.id;
            const currentStatus = btn.dataset.status === 'true';
            
            const confirmed = await Swal.fire({
                title: currentStatus ? 'Block User?' : 'Unblock User?',
                text: currentStatus ? 'User will be blocked from logging in.' : 'User will be unblocked.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, Proceed'
            });

            if (confirmed.isConfirmed) {
                try {
                    await apiCall(`/admin/api/users/${id}/status`, 'PUT', { isActive: !currentStatus });
                    Swal.fire('Success', `User ${!currentStatus ? 'unblocked' : 'blocked'} successfully`, 'success').then(() => location.reload());
                } catch (err) {}
            }
        });
        
        // Delete User
         document.querySelector('.delete-user').addEventListener('click', async function() {
            const btn = this;
            const id = btn.dataset.id;
            
            const confirmed = await Swal.fire({
                title: 'Delete User?',
                text: 'This action cannot be undone. Checks and Balances will be lost.',
                icon: 'error',
                showCancelButton: true,
                confirmButtonText: 'Yes, Delete Permanently',
                confirmButtonColor: '#dc3545'
            });

            if (confirmed.isConfirmed) {
                try {
                    // Assuming delete endpoint exists or using general one. 
                    // Verify if delete endpoint exists in future steps. 
                    // For now I'll create one or assume logic.
                    // Let's implement delete logic in controller too.
                    await apiCall(`/admin/api/users/${id}`, 'DELETE');
                    Swal.fire('Deleted!', 'User has been deleted.', 'success').then(() => window.location = '/admin/users');
                } catch (err) {}
            }
        });
    </script>
</body>
</html>
