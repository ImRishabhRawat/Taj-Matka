<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
</head>
<body>
    <div class="wrapper d-flex">
        <!-- Sidebar -->
        <%- include('partials/sidebar') %>

        <!-- Page Content -->
        <div id="content">
            <!-- Top Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-toggle-sidebar">
                        <i class="fas fa-align-left"></i>
                    </button>
                    
                    <div class="ms-auto d-flex align-items-center">
                        <div class="dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                <span class="me-2 d-none d-md-inline"><%= user.name || 'Admin' %></span>
                                <img src="https://ui-avatars.com/api/?name=Admin&background=4e73df&color=fff" alt="Admin" class="rounded-circle" width="35">
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-3">
                                <li><a class="dropdown-item" href="/profile"><i class="fas fa-user fa-sm fa-fw me-2 text-gray-400"></i> Profile</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <button type="button" onclick="handleLogout()" class="dropdown-item text-danger">
                                        <i class="fas fa-sign-out-alt fa-sm fa-fw me-2 text-gray-400"></i> Logout
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <div class="container-fluid p-4">
                <!-- Header -->
                <div class="row mb-4">
                    <div class="col-12 d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="fw-bold"><i class="fas fa-clock text-primary me-2"></i>Result History</h2>
                            <p class="text-secondary">View all past game results</p>
                        </div>
                        <div>
                            <button class="btn btn-outline-primary" onclick="exportResults()">
                                <i class="fas fa-download me-2"></i>Export
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Filters -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card shadow-sm border-0 rounded-4">
                            <div class="card-body p-3">
                                <form method="GET" class="row g-3">
                                    <div class="col-md-3">
                                        <select class="form-select" name="gameId">
                                            <option value="">All Games</option>
                                            <% if (games && games.length > 0) { %>
                                                <% games.forEach(game => { %>
                                                    <option value="<%= game.id %>" <%= filters.gameId == game.id ? 'selected' : '' %>>
                                                        <%= game.name %>
                                                    </option>
                                                <% }); %>
                                            <% } %>
                                        </select>
                                    </div>
                                    <div class="col-md-2">
                                        <input type="date" class="form-control" name="startDate" value="<%= filters.startDate %>">
                                    </div>
                                    <div class="col-md-2">
                                        <input type="date" class="form-control" name="endDate" value="<%= filters.endDate %>">
                                    </div>
                                    <div class="col-md-2">
                                        <select class="form-select" name="session">
                                            <option value="">All Sessions</option>
                                            <option value="open" <%= filters.session === 'open' ? 'selected' : '' %>>Open</option>
                                            <option value="close" <%= filters.session === 'close' ? 'selected' : '' %>>Close</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3">
                                        <button type="submit" class="btn btn-primary w-100">
                                            <i class="fas fa-search me-2"></i>Filter
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Results Table -->
                <div class="row">
                    <div class="col-12">
                        <div class="card shadow border-0 rounded-4">
                            <div class="card-header bg-white py-3 border-0">
                                <h5 class="m-0 fw-bold text-primary">Game Results</h5>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0 table-responsive-stack">
                                        <thead class="bg-light">
                                            <tr>
                                                <th class="px-4 py-3">Date</th>
                                                <th class="px-4 py-3">Game Name</th>
                                                <th class="px-4 py-3">Session</th>
                                                <th class="px-4 py-3">Winning Number</th>
                                                <th class="px-4 py-3">Total Bets</th>
                                                <th class="px-4 py-3">Total Bet Amount</th>
                                                <th class="px-4 py-3">Total Payout</th>
                                                <th class="px-4 py-3">Profit/Loss</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (results && results.length > 0) { %>
                                                <% results.forEach(result => { %>
                                                    <tr>
                                                        <td class="px-4 py-3" data-label="Date">
                                                            <%= new Date(result.session_date).toLocaleDateString('en-IN') %>
                                                        </td>
                                                        <td class="px-4 py-3 fw-bold" data-label="Game Name"><%= result.game_name %></td>
                                                        <td class="px-4 py-3" data-label="Session">
                                                            <span class="badge <%= result.session_type === 'open' ? 'bg-info' : 'bg-warning' %>">
                                                                <%= result.session_type %>
                                                            </span>
                                                        </td>
                                                        <td class="px-4 py-3" data-label="Winning Number">
                                                            <span class="badge bg-primary fs-6"><%= result.winning_number %></span>
                                                        </td>
                                                        <td class="px-4 py-3" data-label="Total Bets"><%= result.total_bets || 0 %></td>
                                                        <td class="px-4 py-3 text-primary fw-bold" data-label="Total Bet Amount">₹<%= (result.total_bet_amount || 0).toLocaleString() %></td>
                                                        <td class="px-4 py-3 text-danger fw-bold" data-label="Total Payout">₹<%= (result.total_payout || 0).toLocaleString() %></td>
                                                        <td class="px-4 py-3" data-label="Profit/Loss">
                                                            <% const profit = (result.total_bet_amount || 0) - (result.total_payout || 0); %>
                                                            <span class="fw-bold <%= profit >= 0 ? 'text-success' : 'text-danger' %>">
                                                                <%= profit >= 0 ? '+' : '' %>₹<%= profit.toLocaleString() %>
                                                            </span>
                                                        </td>
                                                    </tr>
                                                <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="8" class="text-center py-5 text-muted">
                                                        <i class="fas fa-history fa-3x mb-3 opacity-25"></i>
                                                        <p>No results found</p>
                                                    </td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/scripts') %>

    <script>
        function exportResults() {
            Swal.fire({
                title: 'Export Results',
                text: 'Export feature will be implemented soon',
                icon: 'info'
            });
        }
    </script>
</body>
</html>
