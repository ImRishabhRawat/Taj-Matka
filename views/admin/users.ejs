<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
</head>
<body>

    <div class="wrapper d-flex">
        <!-- Sidebar -->
        <%- include('partials/sidebar') %>

        <!-- Page Content -->
        <div id="content">
            <!-- Top Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-toggle-sidebar">
                        <i class="fas fa-align-left"></i>
                    </button>
                    <div class="ms-auto d-flex align-items-center">
                        <span class="me-3 d-none d-md-inline"><%= user.name %></span>
                        <img src="https://ui-avatars.com/api/?name=Admin&background=4e73df&color=fff" alt="Admin" class="rounded-circle" width="35">
                    </div>
                </div>
            </nav>

            <div class="container-fluid p-4">
                <div class="row align-items-center mb-4">
                    <div class="col-md-6">
                        <h2 class="fw-bold">User Management</h2>
                        <p class="text-secondary">View user details and adjust wallet balances</p>
                    </div>
                    <div class="col-md-6">
                        <form action="/admin/users" method="GET">
                            <div class="input-group search-group shadow-sm">
                                <input type="text" name="search" class="form-control" placeholder="Search by phone or name..." value="<%= search %>">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="card admin-table border-0 shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0 table-responsive-stack">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Mobile</th>
                                        <th>Wallet Balance</th>
                                        <th>Winning Balance</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.forEach(u => { %>
                                        <tr onclick="window.location='/admin/users/<%= u.id %>'" style="cursor: pointer;">
                                            <td data-label="Name">
                                                <div class="d-flex align-items-center">
                                                    <img src="https://ui-avatars.com/api/?name=<%= u.name || u.phone %>&background=random" class="rounded-circle me-3" width="40">
                                                    <div>
                                                        <div class="fw-bold"><%= u.name || 'User' %></div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td data-label="Mobile">
                                                <div class="text-secondary"><%= u.phone %></div>
                                            </td>
                                            <td class="fw-bold" data-label="Wallet Balance">₹<%= parseFloat(u.balance).toLocaleString() %></td>
                                            <td class="fw-bold text-success" data-label="Winning Balance">₹<%= parseFloat(u.winning_balance).toLocaleString() %></td>
                                            <td data-label="Status">
                                                <% if (u.is_active) { %>
                                                    <span class="badge bg-success-subtle text-success border border-success-subtle px-3 py-2 rounded-pill">Active</span>
                                                <% } else { %>
                                                    <span class="badge bg-danger-subtle text-danger border border-danger-subtle px-3 py-2 rounded-pill">Blocked</span>
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% }); %>
                                    <% if (users.length === 0) { %>
                                        <tr>
                                            <td colspan="5" class="text-center py-5 text-secondary">
                                                <i class="fas fa-user-slash fa-3x mb-3 d-block opacity-25"></i>
                                                No users found
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/scripts') %>

    <script>
        // No page-specific scripts for now
    </script>
</body>
</html>
