<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <style>
        .jantri-table {
            font-size: 0.85rem;
        }
        .jantri-table td {
            padding: 8px;
            text-align: center;
            border: 1px solid #dee2e6;
        }
        .result-number {
            font-weight: bold;
            color: #4e73df;
            font-size: 1.1rem;
        }
        .date-cell {
            background-color: #f8f9fc;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="wrapper d-flex">
        <!-- Sidebar -->
        <%- include('partials/sidebar') %>

        <!-- Page Content -->
        <div id="content">
            <!-- Top Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-toggle-sidebar">
                        <i class="fas fa-align-left"></i>
                    </button>
                    
                    <div class="ms-auto d-flex align-items-center">
                        <div class="dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                <span class="me-2 d-none d-md-inline"><%= user.name || 'Admin' %></span>
                                <img src="https://ui-avatars.com/api/?name=Admin&background=4e73df&color=fff" alt="Admin" class="rounded-circle" width="35">
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-3">
                                <li><a class="dropdown-item" href="/profile"><i class="fas fa-user fa-sm fa-fw me-2 text-gray-400"></i> Profile</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <button type="button" onclick="handleLogout()" class="dropdown-item text-danger">
                                        <i class="fas fa-sign-out-alt fa-sm fa-fw me-2 text-gray-400"></i> Logout
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <div class="container-fluid p-4">
                <!-- Header -->
                <div class="row mb-4">
                    <div class="col-12 d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="fw-bold"><i class="fas fa-file-alt text-primary me-2"></i>Jantri Report</h2>
                            <p class="text-secondary">Historical results chart for Matka games</p>
                        </div>
                        <div>
                            <button class="btn btn-outline-primary" onclick="exportJantri()">
                                <i class="fas fa-download me-2"></i>Export PDF
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Filters -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card shadow-sm border-0 rounded-4">
                            <div class="card-body p-3">
                                <form method="GET" class="row g-3">
                                    <div class="col-md-4">
                                        <label class="form-label fw-bold">Select Game</label>
                                        <select class="form-select" name="gameId" required>
                                            <option value="">Choose Game...</option>
                                            <% if (games && games.length > 0) { %>
                                                <% games.forEach(game => { %>
                                                    <option value="<%= game.id %>" <%= filters.gameId == game.id ? 'selected' : '' %>>
                                                        <%= game.name %>
                                                    </option>
                                                <% }); %>
                                            <% } %>
                                        </select>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label fw-bold">Month</label>
                                        <input type="month" class="form-control" name="month" value="<%= filters.month %>" required>
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label">&nbsp;</label>
                                        <button type="submit" class="btn btn-primary w-100">
                                            <i class="fas fa-search me-2"></i>View Report
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Jantri Chart -->
                <% if (jantriData && jantriData.length > 0) { %>
                    <div class="row">
                        <div class="col-12">
                            <div class="card shadow border-0 rounded-4">
                                <div class="card-header bg-white py-3 border-0">
                                    <h5 class="m-0 fw-bold text-primary">
                                        <%= selectedGame ? selectedGame.name : 'Game' %> - Jantri Chart
                                        <span class="text-muted fs-6">(<%= filters.month %>)</span>
                                    </h5>
                                </div>
                                <div class="card-body p-4">
                                    <div class="table-responsive">
                                        <table class="table jantri-table table-bordered">
                                            <thead class="bg-primary text-white">
                                                <tr>
                                                    <th>Date</th>
                                                    <th>Open Result</th>
                                                    <th>Close Result</th>
                                                    <th>Jodi</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% jantriData.forEach(row => { %>
                                                    <tr>
                                                        <td class="date-cell"><%= new Date(row.date).toLocaleDateString('en-IN') %></td>
                                                        <td>
                                                            <% if (row.open_result) { %>
                                                                <span class="result-number"><%= row.open_result %></span>
                                                            <% } else { %>
                                                                <span class="text-muted">-</span>
                                                            <% } %>
                                                        </td>
                                                        <td>
                                                            <% if (row.close_result) { %>
                                                                <span class="result-number"><%= row.close_result %></span>
                                                            <% } else { %>
                                                                <span class="text-muted">-</span>
                                                            <% } %>
                                                        </td>
                                                        <td>
                                                            <% if (row.open_result && row.close_result) { %>
                                                                <span class="result-number text-success">
                                                                    <%= row.open_result %><%= row.close_result %>
                                                                </span>
                                                            <% } else { %>
                                                                <span class="text-muted">-</span>
                                                            <% } %>
                                                        </td>
                                                    </tr>
                                                <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } else if (filters.gameId && filters.month) { %>
                    <div class="row">
                        <div class="col-12">
                            <div class="card shadow border-0 rounded-4">
                                <div class="card-body text-center py-5">
                                    <i class="fas fa-chart-bar fa-3x text-muted mb-3 opacity-25"></i>
                                    <p class="text-muted">No results found for selected game and month</p>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } else { %>
                    <div class="row">
                        <div class="col-12">
                            <div class="card shadow border-0 rounded-4">
                                <div class="card-body text-center py-5">
                                    <i class="fas fa-filter fa-3x text-muted mb-3 opacity-25"></i>
                                    <p class="text-muted">Please select a game and month to view Jantri report</p>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <%- include('partials/scripts') %>

    <script>
        function exportJantri() {
            Swal.fire({
                title: 'Export Jantri',
                text: 'PDF export feature will be implemented soon',
                icon: 'info'
            });
        }
    </script>
</body>
</html>
