<% 
const currentPage = 'bid-history';
const title = 'Bid History';
%>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title><%= title %> - Taj Matka</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="mobile-container">
        <header class="app-header">
            <div class="header-content">
                <div class="header-left">
                    <button class="menu-btn" onclick="window.history.back()">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="19" y1="12" x2="5" y2="12"></line>
                            <polyline points="12 19 5 12 12 5"></polyline>
                        </svg>
                    </button>
                    <h1 class="app-logo">BID HISTORY</h1>
                </div>
            </div>
        </header>
        <main class="app-main">
            <div class="page-content">
                <div style="background: var(--bg-card); padding: 1.5rem; border-radius: 12px; text-align: center;">
                    <p style="color: var(--text-secondary);">This page shows all your bidding history. Check the History page for detailed bet information.</p>
                    <button onclick="window.location.href='/history'" style="margin-top: 1rem; padding: 0.75rem 1.5rem; background: var(--primary-gradient); border: none; border-radius: 8px; color: white; font-weight: 600; cursor: pointer;">
                        View Bet History
                    </button>
                </div>
            </div>
        </main>
        <%- include('partials/bottom-nav', { currentPage: 'history' }) %>
    </div>
    <script src="/js/app.js"></script>
</body>
</html>
