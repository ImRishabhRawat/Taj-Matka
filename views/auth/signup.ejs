<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Sign Up - Taj Matka</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        /* Pure Signup Page Styles */
        .signup-container {
            max-width: 500px;
            margin: 0 auto;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            background: var(--bg-primary);
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.5);
        }
        
        .signup-header {
            background: var(--header-gradient);
            padding: 3rem 1.5rem;
            text-align: center;
            color: white;
            border-bottom: 3px solid var(--primary-gold);
        }
        
        .signup-logo-img {
            max-width: 180px;
            height: auto;
            margin-bottom: 0.5rem;
            filter: drop-shadow(0 4px 8px rgba(0,0,0,0.3));
        }
        
        .signup-tagline {
            font-size: 0.9rem;
            opacity: 0.9;
        }
        
        .signup-form-container {
            flex: 1;
            padding: 2rem 1.5rem;
            max-width: 400px;
            width: 100%;
            margin: 0 auto;
        }
        
        .signup-title {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            color: var(--text-primary);
        }
        
        .signup-subtitle {
            font-size: 0.9rem;
            color: var(--text-secondary);
            margin-bottom: 2rem;
        }
        
        .form-group {
            margin-bottom: 1.5rem;
        }
        
        .form-label {
            display: block;
            font-size: 0.9rem;
            font-weight: 600;
            color: var(--text-secondary);
            margin-bottom: 0.5rem;
        }
        
        .form-input {
            width: 100%;
            padding: 1rem;
            background: var(--bg-card);
            border: 2px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            color: var(--text-primary);
            font-size: 1rem;
            transition: border-color 0.2s;
        }
        
        .form-input:focus {
            outline: none;
            border-color: var(--primary-orange);
        }
        
        .btn-signup {
            width: 100%;
            padding: 1rem;
            background: var(--gold-gradient);
            color: var(--primary-navy);
            border: none;
            border-radius: 8px;
            font-size: 1.1rem;
            font-weight: 800;
            cursor: pointer;
            transition: transform 0.2s;
            box-shadow: 0 4px 15px rgba(255, 215, 0, 0.3);
        }
        
        .btn-signup:active {
            transform: scale(0.98);
        }
        
        .btn-signup:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }
        
        .form-footer {
            text-align: center;
            margin-top: 2rem;
            color: var(--text-secondary);
            font-size: 0.9rem;
        }
        
        .form-footer a {
            color: var(--primary-orange);
            text-decoration: none;
            font-weight: 600;
        }
        
        .error-message {
            background: rgba(255, 68, 68, 0.1);
            border: 1px solid #ff4444;
            color: #ff4444;
            padding: 0.75rem;
            border-radius: 8px;
            margin-bottom: 1rem;
            font-size: 0.9rem;
            display: none;
        }
        
        .error-message.show {
            display: block;
        }
        
        .success-message {
            background: rgba(0, 255, 136, 0.1);
            border: 1px solid #00ff88;
            color: #00ff88;
            padding: 0.75rem;
            border-radius: 8px;
            margin-bottom: 1rem;
            font-size: 0.9rem;
            display: none;
        }
        
        .success-message.show {
            display: block;
        }
    </style>
</head>
<body>
    <div class="signup-container">
        
        <!-- Header Section -->
        <div class="signup-header">
            <img src="/images/logo.png" alt="Taj Matka Logo" class="signup-logo-img">
            <div class="signup-tagline">Play Smart, Win Big</div>
        </div>

        <!-- Form Section -->
        <div class="signup-form-container">
            <h1 class="signup-title">Create Account</h1>
            <p class="signup-subtitle">Sign up to start playing</p>
            
            <div class="error-message" id="errorMessage"></div>
            <div class="success-message" id="successMessage"></div>
            
            <form id="signupForm">
                <div class="form-group">
                    <label class="form-label">Full Name</label>
                    <input 
                        type="text" 
                        class="form-input" 
                        id="name" 
                        placeholder="Enter your full name"
                        required
                    >
                </div>
                
                <div class="form-group">
                    <label class="form-label">Mobile Number</label>
                    <input 
                        type="tel" 
                        class="form-input" 
                        id="phone" 
                        placeholder="Enter 10-digit mobile number"
                        maxlength="10"
                        pattern="[0-9]{10}"
                        required
                    >
                </div>
                
                <div class="form-group">
                    <label class="form-label">Password</label>
                    <input 
                        type="password" 
                        class="form-input" 
                        id="password" 
                        placeholder="Create a password (min 6 characters)"
                        minlength="6"
                        required
                    >
                </div>
                
                <div class="form-group">
                    <label class="form-label">Confirm Password</label>
                    <input 
                        type="password" 
                        class="form-input" 
                        id="confirmPassword" 
                        placeholder="Re-enter your password"
                        minlength="6"
                        required
                    >
                </div>
                
                <button type="submit" class="btn-signup" id="signupBtn">
                    SIGN UP
                </button>
            </form>
            
            <div class="form-footer">
                Already have an account? <a href="/login">Login</a>
            </div>
        </div>

    </div>

    <script>
        // Check if already logged in
        async function checkAuth() {
            try {
                const response = await fetch('/api/auth/me', {
                    credentials: 'include'
                });
                
                if (response.ok) {
                    // Already logged in, redirect to home
                    window.location.href = '/home';
                }
            } catch (error) {
                // Not logged in, stay on signup page
            }
        }

        // Signup form handler
        document.getElementById('signupForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const name = document.getElementById('name').value;
            const phone = document.getElementById('phone').value;
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const errorMessage = document.getElementById('errorMessage');
            const successMessage = document.getElementById('successMessage');
            const signupBtn = document.getElementById('signupBtn');
            
            // Hide messages
            errorMessage.classList.remove('show');
            successMessage.classList.remove('show');
            
            // Validate
            if (!/^[0-9]{10}$/.test(phone)) {
                errorMessage.textContent = 'Please enter a valid 10-digit mobile number';
                errorMessage.classList.add('show');
                return;
            }
            
            if (password.length < 6) {
                errorMessage.textContent = 'Password must be at least 6 characters';
                errorMessage.classList.add('show');
                return;
            }
            
            if (password !== confirmPassword) {
                errorMessage.textContent = 'Passwords do not match';
                errorMessage.classList.add('show');
                return;
            }
            
            // Disable button
            signupBtn.disabled = true;
            signupBtn.textContent = 'CREATING ACCOUNT...';
            
            try {
                const response = await fetch('/api/auth/register', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    credentials: 'include',
                    body: JSON.stringify({ name, phone, password })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    // Store token in localStorage as backup
                    localStorage.setItem('token', data.data.token);
                    
                    // Show success message
                    successMessage.textContent = 'Account created successfully! Redirecting...';
                    successMessage.classList.add('show');
                    
                    // Redirect to home after 1 second
                    setTimeout(() => {
                        window.location.href = '/home';
                    }, 1000);
                } else {
                    errorMessage.textContent = data.message;
                    errorMessage.classList.add('show');
                    signupBtn.disabled = false;
                    signupBtn.textContent = 'SIGN UP';
                }
            } catch (error) {
                console.error('Signup error:', error);
                errorMessage.textContent = 'Signup failed. Please try again.';
                errorMessage.classList.add('show');
                signupBtn.disabled = false;
                signupBtn.textContent = 'SIGN UP';
            }
        });

        // Check auth on page load
        checkAuth();
    </script>
</body>
</html>
