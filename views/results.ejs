<% 
const currentPage = 'results';
const title = 'Results';
%>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title><%= title %> - Taj Matka</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="mobile-container">
        
        <!-- Fixed Header -->
        <header class="app-header">
            <div class="header-content">
                <div class="header-left">
                    <button class="menu-btn" onclick="window.history.back()">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="19" y1="12" x2="5" y2="12"></line>
                            <polyline points="12 19 5 12 12 5"></polyline>
                        </svg>
                    </button>
                    <h1 class="app-logo">RESULTS</h1>
                </div>
                <div class="header-right">
                    <div class="wallet-balance" id="walletBalance">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="2" y="5" width="20" height="14" rx="2"></rect>
                            <line x1="2" y1="10" x2="22" y2="10"></line>
                        </svg>
                        <span id="balanceAmount">â‚¹0</span>
                    </div>
                </div>
            </div>
        </header>

        <!-- Main Content -->
        <main class="app-main">
            <div class="page-content">
                
                <!-- Results List -->
                <div id="resultsList">
                    <div style="text-align: center; padding: 2rem; color: #666;">
                        Loading results...
                    </div>
                </div>

            </div>
        </main>

        <!-- Bottom Navigation -->
        <nav class="bottom-nav">
            <a href="/home" class="nav-item">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                </svg>
                <span>Home</span>
            </a>
            <a href="/results" class="nav-item active">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
                    <path d="M2 17l10 5 10-5M2 12l10 5 10-5"></path>
                </svg>
                <span>Results</span>
            </a>
            <a href="/history" class="nav-item">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
                <span>History</span>
            </a>
            <a href="/chart" class="nav-item">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="20" x2="18" y2="10"></line>
                    <line x1="12" y1="20" x2="12" y2="4"></line>
                    <line x1="6" y1="20" x2="6" y2="14"></line>
                </svg>
                <span>Chart</span>
            </a>
            <a href="/profile" class="nav-item">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                </svg>
                <span>Profile</span>
            </a>
        </nav>

    </div>

    <!-- Scripts -->
    <script src="/js/app.js"></script>
    <script>
        // Load results
        async function loadResults() {
            try {
                const response = await fetch('/api/games/results?limit=50');
                const data = await response.json();
                
                if (data.success && data.data.length > 0) {
                    renderResults(data.data);
                } else {
                    document.getElementById('resultsList').innerHTML = `
                        <div style="text-align: center; padding: 2rem; color: #666;">
                            No results available
                        </div>
                    `;
                }
            } catch (error) {
                console.error('Error loading results:', error);
                document.getElementById('resultsList').innerHTML = `
                    <div style="text-align: center; padding: 2rem; color: #ff4444;">
                        Failed to load results
                    </div>
                `;
            }
        }

        // Render results
        function renderResults(results) {
            const html = results.map(result => {
                const date = new Date(result.session_date);
                const dateStr = date.toLocaleDateString('en-IN', { 
                    day: '2-digit', 
                    month: 'short', 
                    year: 'numeric' 
                });
                
                return `
                    <div style="background: var(--bg-card); padding: 1.5rem; border-radius: 12px; margin-bottom: 1rem;">
                        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem;">
                            <div>
                                <h3 style="color: #FF4500; font-size: 1.1rem; margin-bottom: 0.25rem;">${result.game_name}</h3>
                                <div style="font-size: 0.85rem; color: #666;">${dateStr}</div>
                            </div>
                            <div style="text-align: center; background: linear-gradient(135deg, #FF4500 0%, #8B0000 100%); padding: 1rem 1.5rem; border-radius: 12px; min-width: 80px;">
                                <div style="font-size: 0.75rem; opacity: 0.9; margin-bottom: 0.25rem;">Result</div>
                                <div style="font-size: 2rem; font-weight: 700; font-family: 'Courier New', monospace;">${result.winning_number || '--'}</div>
                            </div>
                        </div>
                        
                        ${result.winning_number ? `
                            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 0.75rem; padding: 0.75rem; background: var(--bg-input); border-radius: 8px;">
                                <div style="text-align: center;">
                                    <div style="font-size: 0.75rem; color: #666; margin-bottom: 0.25rem;">Haruf Andar</div>
                                    <div style="font-weight: 700; font-size: 1.2rem; color: #00ff88;">${result.winning_number[0]}</div>
                                </div>
                                <div style="text-align: center;">
                                    <div style="font-size: 0.75rem; color: #666; margin-bottom: 0.25rem;">Haruf Bahar</div>
                                    <div style="font-weight: 700; font-size: 1.2rem; color: #00ff88;">${result.winning_number[1]}</div>
                                </div>
                            </div>
                        ` : `
                            <div style="text-align: center; padding: 0.75rem; background: var(--bg-input); border-radius: 8px; color: #666;">
                                Result pending
                            </div>
                        `}
                    </div>
                `;
            }).join('');
            
            document.getElementById('resultsList').innerHTML = html;
        }

        // Load results on page load
        loadResults();
        
        // Load balance
        if (isLoggedIn()) {
            loadUserBalance();
        }
    </script>
</body>
</html>
