<% 
const currentPage = 'profile';
const title = 'User Profile';
%>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title><%= title %> - Taj Matka</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="mobile-container">
        <header class="app-header">
            <div class="header-content">
                <div class="header-left">
                    <button class="menu-btn" onclick="window.history.back()">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="19" y1="12" x2="5" y2="12"></line>
                            <polyline points="12 19 5 12 12 5"></polyline>
                        </svg>
                    </button>
                    <h1 class="app-logo">MY PROFILE</h1>
                </div>
            </div>
        </header>
        <main class="app-main">
            <div class="page-content">
                <div style="background: var(--bg-card); padding: 2rem; border-radius: 12px; margin-bottom: 1rem; text-align: center;">
                    <div style="width: 100px; height: 100px; border-radius: 50%; background: linear-gradient(135deg, #FF4500 0%, #8B0000 100%); margin: 0 auto 1rem; display: flex; align-items: center; justify-content: center;">
                        <svg width="60" height="60" viewBox="0 0 24 24" fill="white">
                            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/>
                        </svg>
                    </div>
                    <h2 id="userPhone" style="color: var(--text-primary); font-size: 1.5rem; margin-bottom: 0.5rem;">Loading...</h2>
                    <p style="color: var(--text-secondary);">Member since <span id="memberSince">-</span></p>
                </div>

                <div style="background: var(--bg-card); padding: 1.5rem; border-radius: 12px; margin-bottom: 1rem;">
                    <h3 style="color: var(--primary-orange); margin-bottom: 1rem;">Account Balance</h3>
                    <div style="display: flex; justify-content: space-between; padding: 1rem; background: var(--bg-input); border-radius: 8px; margin-bottom: 0.75rem;">
                        <span style="color: var(--text-secondary);">Main Balance</span>
                        <span id="mainBalance" style="color: var(--text-primary); font-weight: 700; font-size: 1.1rem;">₹0</span>
                    </div>
                    <div style="display: flex; justify-content: space-between; padding: 1rem; background: var(--bg-input); border-radius: 8px;">
                        <span style="color: var(--text-secondary);">Winning Balance</span>
                        <span id="winningBalance" style="color: #00ff88; font-weight: 700; font-size: 1.1rem;">₹0</span>
                    </div>
                </div>

                <div style="background: var(--bg-card); padding: 1.5rem; border-radius: 12px; margin-bottom: 1rem;">
                    <h3 style="color: var(--primary-orange); margin-bottom: 1rem;">Statistics</h3>
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                        <div style="text-align: center; padding: 1rem; background: var(--bg-input); border-radius: 8px;">
                            <div style="font-size: 1.5rem; font-weight: 700; color: var(--text-primary); margin-bottom: 0.25rem;" id="totalBets">0</div>
                            <div style="font-size: 0.85rem; color: var(--text-secondary);">Total Bets</div>
                        </div>
                        <div style="text-align: center; padding: 1rem; background: var(--bg-input); border-radius: 8px;">
                            <div style="font-size: 1.5rem; font-weight: 700; color: #00ff88; margin-bottom: 0.25rem;" id="totalWins">0</div>
                            <div style="font-size: 0.85rem; color: var(--text-secondary);">Total Wins</div>
                        </div>
                    </div>
                </div>

                <div style="background: var(--bg-card); padding: 1.5rem; border-radius: 12px; margin-bottom: 1rem;">
                    <h3 style="color: var(--primary-orange); margin-bottom: 1rem;">Quick Actions</h3>
                    <button onclick="window.location.href='/deposit'" style="width: 100%; padding: 1rem; background: linear-gradient(135deg, #00ff88 0%, #00cc6a 100%); border: none; border-radius: 8px; color: #000; font-weight: 700; margin-bottom: 0.75rem; cursor: pointer;">
                        Add Money
                    </button>
                    <button onclick="window.location.href='/withdraw'" style="width: 100%; padding: 1rem; background: linear-gradient(135deg, #4da6ff 0%, #0066cc 100%); border: none; border-radius: 8px; color: white; font-weight: 700; margin-bottom: 0.75rem; cursor: pointer;">
                        Withdraw Money
                    </button>
                    <button onclick="window.location.href='/history'" style="width: 100%; padding: 1rem; background: var(--bg-input); border: 1px solid rgba(255,255,255,0.1); border-radius: 8px; color: var(--text-primary); font-weight: 600; cursor: pointer;">
                        View History
                    </button>
                </div>
            </div>
        </main>
        <%- include('partials/bottom-nav', { currentPage: 'home' }) %>
    </div>
    <script src="/js/app.js"></script>
    <script>
        async function loadProfile() {
            if (!isLoggedIn()) {
                window.location.href = '/login';
                return;
            }

            try {
                const response = await API.get('/auth/me');
                if (response.success) {
                    const user = response.data;
                    document.getElementById('userPhone').textContent = user.phone || 'User';
                    document.getElementById('mainBalance').textContent = `₹${parseFloat(user.balance || 0).toFixed(2)}`;
                    document.getElementById('winningBalance').textContent = `₹${parseFloat(user.winning_balance || 0).toFixed(2)}`;
                    
                    if (user.created_at) {
                        const date = new Date(user.created_at);
                        document.getElementById('memberSince').textContent = date.toLocaleDateString('en-IN', { month: 'long', year: 'numeric' });
                    }
                }

                // Load bet statistics
                const betsResponse = await API.get('/bets/history?limit=1000');
                if (betsResponse.success) {
                    const bets = betsResponse.data;
                    document.getElementById('totalBets').textContent = bets.length;
                    document.getElementById('totalWins').textContent = bets.filter(b => b.status === 'won').length;
                }
            } catch (error) {
                console.error('Error loading profile:', error);
            }
        }

        loadProfile();
    </script>
</body>
</html>
